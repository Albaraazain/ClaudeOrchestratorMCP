{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Orchestrator",
  "version": "1.0.0",
  "identifier": "com.claude-orchestrator.dashboard",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Claude Orchestrator Dashboard",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "sidecars/dashboard-api"
    ],
    "category": "DeveloperTool",
    "shortDescription": "AI Agent Orchestration Dashboard",
    "longDescription": "Desktop dashboard for monitoring and managing Claude AI agent orchestration tasks, phases, and reviews.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {}
}
